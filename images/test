// Run this after the grid/store exist (z. B. in initPageLayout)
const grid  = this.down('gridpanel');
const store = grid.getStore();
const proxy = store.getProxy();

proxy.setExtraParams({
  fields: 'employeeId,login,hrs'   // try this first
  // $select: 'employeeId,login,hrs' // try if OData-ish
  // include: 'employeeId,login'     // as another attempt
});

store.load(); // trigger request

-----------------------------------------

const grid  = this.down('gridpanel');
const store = grid.getStore();

store.on('beforeload', (st, op) => {
  const p = op.getParams() || {};
  p.fields = 'employeeId,login,hrs';  // or $select/include as above
  op.setParams(p);
});
store.load();
