{
	"manifest_version": 2,

	"name": "APMOD",
	"description": "APMOD for Firefox",
	"version": "1.0",

	"content_scripts": [{
		"matches": ["https://eam.eu1.inforcloudsuite.com/*"],
		"all_frames": true,
		"js": ["./inject/selector.js","./inject/dataspy.js","./inject/dataspyfilter.js","./inject/filler.js","./inject/popup.js","./inject/radialmenu.js"],
		"css": ["./inject/style.css","./inject/radialmenu.css"]
	}],

	"browser_action": {
		"default_title": "APMOD",
		"default_icon": "./icon.png"
	}
}
