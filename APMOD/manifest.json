{
	"manifest_version": 3,

	"name": "APMOD",
	"description": "",
	"version": "0.1",

	"permissions": [ "storage" ],

	"content_scripts": [{
		"matches": ["https://eam.eu1.inforcloudsuite.com/*"],
		"all_frames": true,
		"js": ["./inject/filler.js"],
		"css": ["./inject/style.css"]
	},{
		"world": "MAIN",
		"matches": ["https://eam.eu1.inforcloudsuite.com/*"],
		"all_frames": true,
